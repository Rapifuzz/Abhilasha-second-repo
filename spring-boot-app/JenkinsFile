pipeline {
    agent any
    
    environment {
        // Define environment variable for SonarQube token
        SONARQUBE_TOKEN = credentials('sonarqube')
    }
    
    stages {
        stage('Build and Test') {
            steps {
                // Example build and test steps
                sh 'echo Building and testing...'
            }
        }
        
        stage('SonarQube Analysis') {
            steps {
                script {
                    // Run SonarQube Scanner with the token
                    sh """
                        sonar-scanner \
                          -Dsonar.projectKey=my_project_key \
                          -Dsonar.sources=. \
                          -Dsonar.host.url=http://192.168.3.186:9000 \
                          -Dsonar.login=${SONARQUBE_TOKEN}
                    """
                }
            }
        }
    }
}
